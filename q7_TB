`timescale 1ns/1ps

module moore3Ones_TB();
  reg i_Tclk; 
  reg i_Treset; 
  reg i_Tx;
  wire o_Ty;
  
  integer i;
  
moore3Ones moore3test1(
  .i_clk(i_Tclk),
  .i_reset(i_Treset),
  .i_x(i_Tx),
  .o_y(o_Ty));
  
  reg[14:0] data_try = 15'b000_001_111_100_111;
  
  always #2 i_Tclk = ~ i_Tclk;
  
  initial
  begin
    i_Tclk = 0;
	 i_Treset = 1;
	 i_Tx = 0;
	 i = 0;
	 #5 i_Treset = 0;
	 
	 for (i=0; i<15; i=i+1) begin
	   i_Tx = data_try[i];
	   #5;
		
	end
	$finish;
	
end

endmodule